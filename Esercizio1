int isTreBil=1;
int pathLength=-1;

void longestPath(PNode u,int currentLength){
    if(u==nullptr){
        return;
    }
    if(u->left==nullptr && u->right==nullptr){
        if(pathLength==-1){
        pathLength=currentLength;
        }
        else{
            if(currentLength>pathLength){
                pathLength=currentLength;
            }
        }
    }
    longestPath(u->left,currentLength+1);
    longestPath(u->right,currentLength+1);
}

void checkTreBil(PNode u,int currentLength){
    if(u==nullptr){
        return;
    }
    if(u->left==nullptr || u->right==nullptr){
        if(abs(pathLength-currentLength)>3){
        isTreBil=0;
        }
    }
    checkTreBil(u->left,currentLength+1);
    checkTreBil(u->right,currentLength+1);
}

bool treBil(PNode u){
    if(u==nullptr){
        return isTreBil;
    }
    longestPath(u,0);
    checkTreBil(u,0);
    return isTreBil;
}
