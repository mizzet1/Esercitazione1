void checkTreBil(PNode u,int currentLength,int* lengthCheck,int* flag){
    if(u==nullptr || *flag==0){
        return;
    }
    if(u->left==nullptr || u->right==nullptr){
        if(*lengthCheck==-1){
            *lengthCheck=currentLength;
        }
        else{
            if(currentLength>*lengthCheck+3){
                 *flag=0;
            }  
        } 
    }
    checkTreBil(u->left,currentLength+1,lengthCheck,flag);
    checkTreBil(u->right,currentLength+1,lengthCheck,flag);
}

bool treBil(PNode u){
    if(u==nullptr){
        return true;
    }
    int flag=1;
    int lengthCheck=-1;
    checkTreBil(u,0,&lengthCheck,&flag);
    return flag;
}
